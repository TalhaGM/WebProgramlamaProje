
<!DOCTYPE html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SkyWander_Airlines</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SkyWander_Airlines.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm bg-dark navbar-light box-shadow renk">
            <div class="container-fluid">

                <a class="navbar-brand" style="color:white" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/resimler/logo1.png" style="height: 60px;" /> SkyWander Airlines
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end">
                    <ul class="navbar-nav">
                        <li class="nav-item">

                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Hizmetler" asp-action="Index">Anasayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Uye" asp-action="UyeBilgileriniGuncelle">Profil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Hizmetler" asp-action="Hizmetler">Uçuş Ara</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Hizmetler" asp-action="CikisYap">Çıkış Yap</a>
                        </li>
                        <li>
                            <select name="culture" style="margin-top:12px;" onchange="document.getElementById('selectLanguage').submit();">
                                <option value="tr-TR">Türkçe</option>
                                <option value="en-US">English</option>
                            </select>

                        </li>
              
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @*     <div class="container">
    <main role="main" class="pb-3">
    @RenderBody()
    </main>
    </div> *@

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - SkyWander_Airlines - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
